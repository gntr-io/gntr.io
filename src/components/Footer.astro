---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <div class="footer-brand">
          <img src="/logo.png" alt="GNTR Logo" class="footer-logo" />
        </div>
        <p class="footer-description">
          Building exceptional websites, e-commerce pages, mobile apps, custom
          MCP servers, and AI integration for businesses.
        </p>
      </div>

      <div class="footer-section">
        <h4 class="footer-heading">Quick Links</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="footer-section">
        <h4 class="footer-heading">Services</h4>
        <ul class="footer-links">
          <li>Website Development</li>
          <li>E-commerce Solutions</li>
          <li>Mobile Applications</li>
          <li>Custom MCP Servers</li>
          <li>AI Integration</li>
        </ul>
      </div>

      <div class="footer-section">
        <h4 class="footer-heading">Connect</h4>
        <div class="social-links">
          <a href="#" aria-label="GitHub">GitHub</a>
          <a href="#" aria-label="LinkedIn">LinkedIn</a>
          <a href="#" aria-label="Twitter">Twitter</a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} GNTR. All rights reserved.</p>
    </div>
  </div>
</footer>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .footer {
    background-color: $bg-card;
    margin-top: 4rem;
    padding: 3rem 0 1.5rem;

    @include tablet {
      padding: 4rem 0 2rem;
    }
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;

    @include tablet {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 3rem;
    }
  }

  .footer-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-brand {
    margin-bottom: 1rem;
  }

  .footer-logo {
    height: 50px;
    width: auto;
    display: block;
  }

  .footer-title {
    color: $text-heading;
    font-size: 1.5rem;
    margin: 0;
    letter-spacing: 0.05em;
  }

  .footer-description {
    color: $text-body;
    line-height: 1.6;
    margin: 0;
  }

  .footer-heading {
    color: $text-heading;
    font-size: 1rem;
    margin: 0;
    font-weight: 600;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    li {
      color: $text-body;
    }

    a {
      color: $text-body;
      transition: color 0.3s ease;

      &:hover {
        color: $cta-primary;
      }
    }
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    a {
      color: $text-body;
      transition: color 0.3s ease;

      &:hover {
        color: $cta-primary;
      }
    }
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid rgba($text-body, 0.1);
    text-align: center;

    p {
      color: rgba($text-body, 0.7);
      margin: 0;
      font-size: 0.9rem;
    }
  }
</style>
