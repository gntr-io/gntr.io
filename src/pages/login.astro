---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Login - GNTR" description="Admin login for GNTR">
  <section class="login-page">
    <div class="container">
      <div class="login-wrapper">
        <div class="terminal-header">
          <span class="terminal-title">gntr@secure:~</span>
        </div>

        <div class="login-box">
          <div class="terminal-line">
            <span class="prompt">›</span>
            <span class="command">gntr auth --login</span>
          </div>

          <h1 class="login-title">Authenticate</h1>
          <p class="login-description">
            Access restricted area. Valid credentials required.
          </p>

          <form class="login-form" id="loginForm">
            <div class="form-group">
              <label for="username" class="form-label">
                <span class="prompt">›</span> Username
              </label>
              <input
                type="text"
                id="username"
                name="username"
                class="form-input"
                placeholder="admin"
                autocomplete="username"
                required
              />
            </div>

            <div class="form-group">
              <label for="password" class="form-label">
                <span class="prompt">›</span> Password
              </label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-input"
                placeholder="••••••••"
                autocomplete="current-password"
                required
              />
            </div>

            <div class="form-group">
              <label class="checkbox-label">
                <input type="checkbox" name="remember" />
                <span>Remember this device</span>
              </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
              <span class="btn-text">Authenticate</span>
              <span class="btn-icon">→</span>
            </button>

            <p class="form-status" id="loginStatus"></p>
          </form>

          <div class="login-footer">
            <p class="terminal-output">
              <code>Warning: This area is monitored and logged.</code>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style lang="scss">
  @use "../styles/variables" as *;
  @use "../styles/mixins" as *;

  .login-page {
    min-height: calc(100vh - 300px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 0;
  }

  .login-wrapper {
    max-width: 480px;
    margin: 0 auto;
    background-color: $bg-card;
    border: 1px solid rgba($cta-primary, 0.3);
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 0 30px rgba($cta-primary, 0.1);
  }

  .terminal-header {
    background-color: rgba($bg-primary, 0.8);
    padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba($cta-primary, 0.3);
  }

  .terminal-title {
    font-family: "JetBrains Mono", "Fira Code", monospace;
    font-size: 0.875rem;
    color: $cta-primary;
    font-weight: 500;
  }

  .login-box {
    padding: 2rem;

    @include tablet {
      padding: 2.5rem;
    }
  }

  .terminal-line {
    font-family: "JetBrains Mono", monospace;
    color: $text-body;
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
  }

  .prompt {
    color: $cta-primary;
    margin-right: 0.5rem;
    font-weight: 600;
  }

  .command {
    color: $cta-hover;
  }

  .login-title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, $neon-green 0%, $neon-orange 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .login-description {
    color: rgba($text-body, 0.8);
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }

  .login-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    color: $text-heading;
    font-size: 0.95rem;
  }

  .form-input {
    width: 100%;
    background-color: rgba($bg-primary, 0.6);
    border: 1px solid rgba($cta-primary, 0.3);
    color: $text-body;
    padding: 0.875rem;
    border-radius: 4px;
    font-family: "JetBrains Mono", monospace;
    font-size: 0.95rem;
    transition: all 0.3s ease;

    &:focus {
      outline: none;
      border-color: $cta-primary;
      background-color: rgba($bg-primary, 0.8);
      box-shadow: 0 0 0 3px rgba($cta-primary, 0.1);
    }

    &::placeholder {
      color: rgba($text-body, 0.4);
    }

    &[type="password"] {
      letter-spacing: 0.2em;
    }
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: $text-body;
    font-size: 0.9rem;
    cursor: pointer;

    input[type="checkbox"] {
      width: 18px;
      height: 18px;
      cursor: pointer;
      accent-color: $cta-primary;
    }
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    font-weight: 600;
    border-radius: 4px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    text-decoration: none;
    font-size: 1rem;
    min-height: 48px;
  }

  .btn-primary {
    background-color: $cta-primary;
    color: $bg-primary;
    box-shadow: 0 0 20px rgba($cta-primary, 0.3);

    &:hover:not(:disabled) {
      background-color: $cta-hover;
      transform: translateY(-1px);
      box-shadow: 0 0 30px rgba($cta-hover, 0.5);
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }

  .btn-block {
    width: 100%;
  }

  .btn-icon {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .btn:hover .btn-icon {
    transform: translateX(4px);
  }

  .form-status {
    padding: 0.75rem;
    border-radius: 4px;
    text-align: center;
    font-weight: 500;
    font-size: 0.9rem;
    min-height: 1rem;
  }

  .login-footer {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba($cta-primary, 0.1);
  }

  .terminal-output {
    font-family: "JetBrains Mono", monospace;
    color: rgba($text-body, 0.6);
    font-size: 0.8rem;
    margin: 0;
    text-align: center;

    code {
      color: rgba($cta-primary, 0.8);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("loginForm") as HTMLFormElement;
    const status = document.getElementById("loginStatus");

    if (form) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        if (!status) return;

        const formData = new FormData(form);
        const username = formData.get("username") as string;
        const password = formData.get("password") as string;

        // Update button
        const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        const originalText = button.innerHTML;
        button.innerHTML = '<span class="btn-text">Authenticating...</span>';
        button.disabled = true;

        // Simulate authentication delay
        await new Promise(resolve => setTimeout(resolve, 1500));

        // Demo authentication (replace with real auth)
        if (username && password) {
          status.innerHTML = "✓ Authentication successful. Redirecting...";
          status.style.color = "#00FF88";
          status.style.background = "rgba(0, 255, 136, 0.1)";

          // Track login attempt with PostHog
          if (window.posthog) {
            window.posthog.capture("login_attempted", {
              username: username,
              success: true,
            });
          }

          // Redirect after short delay (replace with your admin panel)
          setTimeout(() => {
            window.location.href = "/";
          }, 1000);
        } else {
          status.innerHTML = "❌ Authentication failed. Invalid credentials.";
          status.style.color = "#ff4444";
          status.style.background = "rgba(255, 68, 68, 0.1)";

          // Track failed login
          if (window.posthog) {
            window.posthog.capture("login_attempted", {
              username: username,
              success: false,
            });
          }
        }

        button.innerHTML = originalText;
        button.disabled = false;
      });
    }
  });
</script>
