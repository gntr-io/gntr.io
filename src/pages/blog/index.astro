---
import MainLayout from "../../layouts/MainLayout.astro";

const blogPosts = [
  {
    slug: "introduction-to-mcp-servers",
    title: "Introduction to Model Context Protocol Servers",
    description:
      "Learn about MCP servers and how they enable seamless AI integration for your applications.",
    date: "2025-01-28",
    readTime: "5 min",
    category: "AI",
  },
  {
    slug: "building-modern-ecommerce",
    title: "Building Modern E-commerce Platforms",
    description:
      "Best practices for creating scalable, secure, and user-friendly online stores.",
    date: "2025-01-20",
    readTime: "8 min",
    category: "Web Dev",
  },
  {
    slug: "mobile-app-development-2025",
    title: "Mobile App Development in 2025",
    description:
      "Trends and technologies shaping the future of mobile application development.",
    date: "2025-01-15",
    readTime: "6 min",
    category: "Mobile",
  },
];

function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  });
}
---

<MainLayout
  title="Blog - GNTR"
  description="Articles about web development, mobile apps, MCP servers, and AI integration."
>
  <section class="blog">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">
          <span class="prompt">›</span> Blog
        </h1>
        <p class="page-description">
          Insights, tutorials, and thoughts on modern software development.
        </p>
      </div>

      <div class="posts-list">
        {
          blogPosts.map((post) => (
            <article class="post-card">
              <div class="post-header">
                <div class="post-meta">
                  <code class="category-tag">{post.category}</code>
                  <span class="post-date">{formatDate(post.date)}</span>
                  <span class="read-time">{post.readTime} read</span>
                </div>
              </div>
              <h2 class="post-title">
                <a href={`/blog/${post.slug}`}>
                  <span class="prompt">{'>'}</span> {post.title}
                </a>
              </h2>
              <p class="post-description">{post.description}</p>
              <a href={`/blog/${post.slug}`} class="read-more">
                Read article →
              </a>
            </article>
          ))
        }
      </div>

      <div class="empty-state">
        <div class="terminal-box">
          <p class="terminal-text">
            <span class="prompt">›</span>
            <span class="command">ls -la ./blog/posts/</span>
          </p>
          <p class="empty-text">More articles coming soon...</p>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style lang="scss">
  @use "../../styles/variables" as *;
  @use "../../styles/mixins" as *;

  .blog {
    margin-bottom: 4rem;
  }

  .page-header {
    margin-bottom: 3rem;

    @include tablet {
      margin-bottom: 4rem;
    }
  }

  .page-title {
    font-size: 2rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;

    @include tablet {
      font-size: 2.5rem;
    }
  }

  .prompt {
    color: $cta-primary;
    font-weight: 600;
  }

  .page-description {
    font-size: 1.125rem;
    color: $text-body;
    max-width: 600px;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .post-card {
    background-color: $bg-card;
    border: 1px solid rgba($cta-primary, 0.2);
    padding: 1.5rem;
    border-radius: 4px;
    transition: all 0.3s ease;

    &:hover {
      border-color: $cta-primary;
      transform: translateX(4px);
    }
  }

  .post-header {
    margin-bottom: 1rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .category-tag {
    font-family: "Courier New", monospace;
    font-size: 0.75rem;
    background-color: rgba($cta-primary, 0.2);
    color: $cta-primary;
    padding: 0.25rem 0.5rem;
    border-radius: 2px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .post-date,
  .read-time {
    font-family: "Courier New", monospace;
    font-size: 0.875rem;
    color: rgba($text-body, 0.7);
  }

  .post-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.3;

    a {
      color: $text-heading;
      display: flex;
      align-items: flex-start;
      gap: 0.5rem;
      transition: color 0.3s ease;

      &:hover {
        color: $cta-primary;
      }
    }
  }

  .post-description {
    color: $text-body;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .read-more {
    color: $cta-hover;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;

    &:hover {
      color: $cta-primary;
      gap: 0.5rem;
    }
  }

  .empty-state {
    margin-top: 3rem;
  }

  .terminal-box {
    background-color: $bg-card;
    border: 1px solid rgba($cta-primary, 0.2);
    padding: 2rem 1.5rem;
    border-radius: 4px;
    text-align: center;
  }

  .terminal-text {
    font-family: "Courier New", monospace;
    color: $text-body;
    margin-bottom: 1rem;
    font-size: 0.95rem;
  }

  .command {
    color: $cta-hover;
    margin-left: 0.5rem;
  }

  .empty-text {
    color: rgba($text-body, 0.7);
    font-style: italic;
  }
</style>
